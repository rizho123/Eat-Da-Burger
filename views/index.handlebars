<div class="container">
	<div class="row">
		<div class="col-md-12 text-center" id="top-bar">
			<img class="mainpic" id="mainpic" src="assets/img/burger_s.gif" alt="burger" />
			<h1><span class="strikethrough">Murder</span>Eat-Da-Burger! </h1>
		</div>
		<div class="col-md-6 text-center" class="task">
            <h4 class="burgerlist">Burgers to <span class="strikethrough">Kill</span>Eat</h4>
			<div class="row">
			  {{#each burger_data}}
			  	{{#unless this.devoured}}
				<div class="col-md-9 text-center burgerentry">
					<div class="floater">
					<pre class="burgerEat">{{this.id}}. {{this.burger_name}}
					</pre>
					</div>
					<div class="text-center">
					<form class="devour-form button-size">
						<input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
						<button type="submit" class="btn btn-default devour">Devour<img class="eatme" src="assets/img/burger.PNG"></button>
					</form>
				</div>
				</div>
				
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="col-md-6 text-center" class="task">
            <h4 class="eaten"><span class="strikethrough">Fallen</span>Eaten Burgers</h4>
			  {{#each burger_data}}
			  	{{#if this.devoured}}
			  		<input class="form-control burgerEaten" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly></input>
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-12 text-center enter_section">
			<p class="inputTitle">Add a burger to the list to be eaten!</p>
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control burgerInput" name="burger_name" value="" id="enter_text">
				<button type="submit" class="btn btn-primary addBurger" id="text-enter-button">Add Burger</button>
			</form>
		</div>
	</div>
</div>